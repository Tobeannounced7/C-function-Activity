#include<stdio.h>
#include<conio.h>

void main()
    {
    int age;
    char name[50]; // or *name clrscr();

    printf("\n Type the Name: ");
    gets(name);

    printf("\n Enter The Age: ");
    scanf("%d",&age);

    if(age>=18)
    {
    printf("\n You are eligible for voting.",name);
    }
    else if(age ==0)
    {
    printf("\n Invalid age, Please try again ",name );
    }
    else
    {
    printf("\n You are not eligible for voting.",name);
    }
    getch();
    }
